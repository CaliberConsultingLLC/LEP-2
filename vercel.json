{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' https://api.openai.com https://firestore.googleapis.com https://*.googleapis.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/get-ai-summary", "destination": "/api/get-ai-summary.js" },
    { "source": "/get-ai-reflection", "destination": "/api/get-ai-reflection.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/get-ai-summary.js": { "maxDuration": 30 },
    "api/get-ai-reflection.js": { "maxDuration": 30 },
    "api/get-campaign.js": { "maxDuration": 30 },
    "api/dismiss-statement.js": { "maxDuration": 30 }
  }
}
